<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="GlucoMan.Maui.BackPicturePage"
             Title="Back past injections">
    <VerticalStackLayout>
        <HorizontalStackLayout HeightRequest="40">
            <Button Text="Save" Pressed="Save_Pressed" x:Name="bottone_save"/>
            <Button Text="Edit" Pressed="Edit_Pressed" x:Name="bottone_edit"/>
        </HorizontalStackLayout>
        <Image Source="busto_retro.png" Scale="1"        
               HeightRequest="600"
               HorizontalOptions="Center">
            <Image.GestureRecognizers>
                <TapGestureRecognizer Tapped="TapGestureRecognizer_Tapped" />
            </Image.GestureRecognizers>
        </Image>
    </VerticalStackLayout>
</ContentPage>